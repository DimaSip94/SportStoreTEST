@model LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="text-danger" asp-validation-summary="All"></div>
<form asp-action="Login" asp-controller="Account" method="post">
    <input type="hidden" asp-for="ReturnURL" />
    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Pasword"></label>
        <div><span asp-validation-for="Pasword" class="text-danger"></span></div>
        <input type="password" asp-for="Pasword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Log In</button>
    <a asp-action="Register" class="btn btn-primary">Register</a>
    <a asp-action="ForgotPassword" class="btn btn-primary">Forgot password</a>
</form>
